{
	"name": "@produck/es-workspace",
	"private": true,
	"scripts": {
		"deps:install": "npm -v && npm install",
		"deps:ci-install": "npm install --include=optional",
		"lint": "eslint --fix",
		"test": "npm run --workspaces build:version --if-present && npm test --workspaces --if-present",
		"coverage": "c8 --reporter=lcov npm run test",
		"publish": "npm run lint && npm run test && lerna publish --no-private"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@produck/eslint-rules": "^0.2.6",
		"@types/node": "^24.10.1",
		"c8": "^10.1.3",
		"eslint": "^9.39.1",
		"lerna": "^9.0.1",
		"typescript-eslint": "^8.47.0"
	},
	"workspaces": [
		"packages/abstract",
		"packages/abstract-token",
		"packages/abstract-member",
		"packages/abstract-member-zod"
	]
}
